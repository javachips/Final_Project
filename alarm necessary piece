<!-- form for making a timer -->


<!DOCTYPE html>
<html>
<body>

<form id="frm1" accept-charset="get it done!">
  Reminders title: <input type="text" name="reminder" value="reminder"><br>
  Details: <input type="text" name="lname" value="Duck"><br>
</form>
  what time: <input type="text" name="time" <input type="integers" />

<p>Click "Try it" to display accept-charset of the form:</p>

<button onclick="myFunction()">Remind Me!</button>

<p id="demo"></p>

<script>
function myFunction() {
    var x = document.getElementById("frm1").acceptCharset;
    document.getElementById("demo").innerHTML = x;
}
</script>

</body>
</html>


<!-- Physical Timer --> 
<!DOCTYPE html>
<html>
<body>

<p>Click "Try it". Wait 3 seconds. The page will alert "Hello".</p>
<p>Click "Stop" to prevent the first function to execute.</(p>
<p>(You must click "Stop" before the 3 seconds are up.)</p>

<button onclick="myVar = setTimeout(myFunction, 3000)">Try it</button>

<button onclick="clearTimeout(myVar)">Stop it</button>

<script>
function myFunction() {
    alert("Hello");
}
</script>
</body>
</html>


<!-- User input piece for timer -- >

<form id="form" onsubmit="return false;">
    <input style="position:absolute; top:80%; left:5%; width:40%;" type="text" id="userInput" />
    <input style="position:absolute; top:50%; left:5%; width:40%;" type="submit" onclick="othername();" />
</form>

function othername() {
    var input = document.getElementById("userInput").value;
    alert(input);
}
